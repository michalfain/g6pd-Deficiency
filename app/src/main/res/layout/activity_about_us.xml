<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_beans"
    tools:context=".AboutUs">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30sp"
        android:text="מי אנחנו"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:text="מטה המודעות לרגישות לפול"/>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="רחלי פרץ"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rachel7386@gmail.com"
            android:textSize="25sp"
            android:id="@+id/racheli_email"
            android:layout_margin="10dp"
            android:gravity="bottom"
            />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="רינת אלפיטל"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                />
        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rachel7386@gmail.com"
            android:textSize="25sp"
            android:id="@+id/rinat_email"
            android:layout_margin="10dp"
            android:gravity="bottom"
            /-->

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="הצטרפו אלינו למה המאבק"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="לחצו כאן"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/press_here"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>